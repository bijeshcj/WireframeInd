<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_item_height"
                android:descendantFocusability="blocksDescendants"
                android:background="@color/gray">

    <LinearLayout
        android:id="@+id/imageLL"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/diagnostics_code"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tab_button"
            android:contentDescription="@string/dashboard_img_cd"
            android:src="@drawable/alert_tab_icon"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab_title"
        android:layout_toRightOf="@id/imageLL"
        android:layout_toEndOf="@id/imageLL"
        android:layout_alignTop="@id/imageLL"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="@dimen/header_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab_sub_title"
        android:layout_toRightOf="@id/imageLL"
        android:layout_below="@id/tab_title"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/imageLL"
        android:layout_alignBottom="@id/imageLL"
        android:textSize="@dimen/form_labels_text_size"/>

</RelativeLayout>