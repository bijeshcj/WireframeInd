<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@drawable/gradient_gray_bar"
    android:paddingBottom="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alertDetailTV"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:layout_marginStart="@dimen/list_item_left_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/right_arrow_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/right_arrow_cd"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/list_item_right_margin"
        android:layout_marginEnd="@dimen/list_item_right_margin"
        android:textColor="@color/gray"
        android:id="@+id/alertTimeTV"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"/>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/alertDetailTV"-->
        <!--android:layout_alignLeft="@id/alertDetailTV"-->
        <!--android:id="@+id/alertDetailMessageTV"-->
        <!--android:gravity="center_vertical"/>-->
</RelativeLayout>
