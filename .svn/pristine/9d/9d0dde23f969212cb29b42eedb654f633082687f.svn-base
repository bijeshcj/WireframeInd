<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boundaryDetailTV"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:textColor="@color/diagnostics_text_color"
        android:layout_marginStart="@dimen/list_item_left_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />
    <ImageButton
        android:id="@+id/btn_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_arrow_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/right_arrow_cd"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
