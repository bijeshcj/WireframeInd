<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.verizontelematics.indrivemobile.fragments.IndriveHomeFragment">

   <ListView
       android:id="@+id/homeListView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtViewAlertsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeListView"
        android:text="@string/recent_alerts_caps"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="@color/red"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_alerts_list"
        android:layout_below="@id/txtViewAlertsHeader"
        />



</RelativeLayout>
