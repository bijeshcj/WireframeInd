<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
    android:id="@+id/mainRecallLL"
    android:background="@color/time_period">

    <LinearLayout
        android:id="@+id/currentRecallsLL"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header_current_recalls_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">
        <TextView
            android:id="@+id/header_current_recalls"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/gradient_gray_bar"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/current_recalls"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
        <!--<TextView
            android:id="@+id/header_current_recalls_date_issued"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/viewAllBTN"
            android:background="@color/gray"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="@string/date_issued"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentRight="true"/>-->
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header_current_recalls_list_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/sub_header_color">
            <TextView
                android:id="@+id/header_current_recalls_description"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/description"
                android:textColor="@color/diagnostics_text_color"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/header_current_recalls_date_issued"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/viewAllBTN"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:text="@string/date_issued"
                android:textColor="@color/diagnostics_text_color"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/current_recalls_list_swipe_refresh">
        <ListView
            android:id="@+id/list_current_recalls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_below="@id/header_current_recalls_list">
        </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>


        <TextView
            android:id="@+id/noCurrentRecallsTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:visibility="visible"
            android:hint="@string/no_recalls_prompt"
            android:textColor="@color/diagnostics_text_color"
            android:textSize="16sp"
            />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/completedRecallsLL"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header_completed_recalls_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <TextView
                android:id="@+id/header_completed_recalls"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/gradient_gray_bar"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/completed_recalls"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <!--<TextView
                android:id="@+id/header_completed_recalls_date_issued"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/viewAllBTN"
                android:background="@color/gray"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="@string/date_issued"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                />-->

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header_completed_recalls_list_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/sub_header_color">

            <TextView
                android:id="@+id/header_completed_recalls_description"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/description"
                android:textColor="@color/diagnostics_text_color"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/header_completed_recalls_date_issued"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/viewAllBTN"

                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:text="@string/date_issued"
                android:textColor="@color/diagnostics_text_color"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/completed_recalls_list_swipe_refresh">
        <ListView
            android:id="@+id/list_completed_recalls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_below="@id/header_completed_recalls_list">
        </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/noCompletedRecallsTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:gravity="center"
            android:hint="@string/no_recalls_completed_prompt"
            android:textColor="@color/diagnostics_text_color"
            android:textSize="16sp"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
