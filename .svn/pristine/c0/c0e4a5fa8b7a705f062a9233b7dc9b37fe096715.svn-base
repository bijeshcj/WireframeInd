<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/lbl_dtc_code"
        android:textSize="@dimen/form_labels_text_size"
        android:text="@string/dtc_code_label"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/lbl_dtc_code"
        android:id="@+id/lbl_dtc_status"
        android:text="@string/service_required"
        android:layout_marginRight="@dimen/list_item_right_margin"
        android:layout_marginEnd="@dimen/list_item_right_margin"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/warning_red"
        android:layout_alignTop="@id/lbl_dtc_status"
        android:layout_alignBottom="@id/lbl_dtc_status"
        android:layout_toLeftOf="@id/lbl_dtc_status"
        android:layout_toStartOf="@id/lbl_dtc_status"
        android:contentDescription="@string/info_img_cd"
        android:id="@+id/dtc_status"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_dtc_code"
        android:id="@+id/lbl_dtc_description"
        android:lineSpacingMultiplier="1"
        android:layout_marginTop="@dimen/list_item_top_margin"
        android:layout_marginBottom="@dimen/list_item_top_margin"
        android:layout_marginEnd="@dimen/list_item_right_margin"
        android:layout_marginRight="@dimen/list_item_right_margin"
        />
</RelativeLayout>