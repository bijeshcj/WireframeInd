<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/time_period"
                tools:context="com.verizontelematics.indrivemobile.activity.WhatIsThisActivity">

    <ImageView
        android:id="@+id/barcode_image_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_margin="@dimen/list_item_top_margin"
        android:layout_below="@id/barcode_image_view"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
