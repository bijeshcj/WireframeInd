<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/emergency_screened_background"
                tools:context="com.verizontelematics.indrivemobile.activity.RoadsideAssistActivity">

    <include
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/actionbar_header"/>

    <TextView
        android:padding="10dp"
        android:id="@+id/road_side_TV"
        android:text="@string/road_side_assist_text"
        android:layout_width="wrap_content"
        android:textSize="7pt"
        android:layout_below="@id/headerLayout"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:text="@string/road_side_assist_additional_text"
        android:layout_below="@id/road_side_TV"
        android:layout_width="wrap_content"
        android:textSize="5pt"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
