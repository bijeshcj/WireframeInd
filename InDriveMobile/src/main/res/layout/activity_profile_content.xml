<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/time_period"
                android:layout_height="match_parent">


    <include
        android:id="@+id/headerRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/actionbar_header"/>

    <LinearLayout
        android:layout_below="@id/headerRL"
        android:layout_width="match_parent"
        android:paddingLeft="40dp"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/changePasswordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_text_size"
            android:text="@string/change_password"

            />

        <EditText
            android:id="@+id/oldPasswordET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_labels_text_height"
            android:background="@color/white"
            android:layout_marginTop="@dimen/form_labels_text_height"
            android:inputType="textPassword"

            />

        <TextView
            android:id="@+id/oldPasswordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_top_margin"
            android:textSize="@dimen/form_labels_text_size"
            android:text="@string/old_password"

            />

        <EditText
            android:id="@+id/newPasswordET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_labels_text_height"
            android:background="@color/white"
            android:layout_marginTop="@dimen/scroll_top_margin"
            android:inputType="textPassword"

            />

        <TextView
            android:id="@+id/newPasswordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/form_labels_text_size"
            android:layout_marginTop="@dimen/list_item_top_margin"
            android:text="@string/type_new_password"

            />


        <EditText
            android:id="@+id/confirmPasswordET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/form_labels_text_height"
            android:background="@color/white"
            android:layout_marginTop="@dimen/scroll_top_margin"
            android:inputType="textPassword"
            android:paddingTop="7dp"

            />

        <TextView
            android:id="@+id/confirmPasswordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:textSize="@dimen/form_labels_text_size"
            android:layout_marginTop="@dimen/list_item_top_margin"

            />


    </LinearLayout>


</RelativeLayout>