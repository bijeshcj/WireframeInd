<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/custom_info_window_background"
    android:id="@+id/custom_info_window_container"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_address"
        android:textSize="@dimen/marker_address_label_font_size"
        android:layout_marginLeft="@dimen/custom_info_margin_left"
        android:layout_marginStart="@dimen/custom_info_margin_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/address"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_snippet"
        android:layout_below="@id/txt_address"
        android:layout_alignLeft="@id/txt_address"
        android:layout_alignStart="@id/txt_address"
        android:textColor="@color/white"
        android:textSize="@dimen/marker_address_label_font_size"
        android:paddingTop="@dimen/custom_info_margin_top"
        android:layout_marginBottom="@dimen/custom_info_margin_top"
        />
    <ImageButton
        android:contentDescription="@string/directions_cd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btn_get_directions"
        android:background="@drawable/map_direction_icon_button"
        android:layout_toRightOf="@id/txt_address"
        android:layout_toEndOf="@id/txt_address"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/custom_info_margin_left"
        android:layout_marginRight="@dimen/custom_info_margin_left"
        />
</RelativeLayout>