<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/faqTV"
        style="@style/drawerListItemAppearanceStyle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/list_item_left_margin"
        android:textColor="@color/diagnostics_text_color"/>

    <ImageView
        android:id="@+id/arrow_btn_list"
        android:layout_width="wrap_content"
        android:padding="@dimen/list_item_left_margin"
        android:contentDescription="@string/service_type_arrow_cd"
        android:layout_height="wrap_content"
        android:background="@drawable/forward_arrow_gray"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>