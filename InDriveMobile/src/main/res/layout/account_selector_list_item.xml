<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="400dp"
    >

    <TextView
        android:id="@+id/accountNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:text="@string/account_text"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/vehicleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accountNumberLabel"
        android:layout_alignStart="@+id/accountNumberLabel"
        android:layout_below="@+id/accountNumberLabel"
        android:text="@string/vehicle"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/accountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/accountNumberLabel"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_toRightOf="@+id/accountNumberLabel"
        android:layout_toEndOf="@+id/accountNumberLabel"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accountNumber"
        android:layout_alignStart="@+id/accountNumber"
        android:layout_alignTop="@+id/vehicleLabel"
        android:layout_below="@+id/accountNumber"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vehicle_details_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/vehicle_details_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

    </LinearLayout>

</RelativeLayout>