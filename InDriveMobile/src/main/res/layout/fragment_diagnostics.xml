<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_id_diagnostics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">
    <TextView
        android:id="@+id/diagnosticsIntroTV"
        android:layout_width="250dp"
        android:text="@string/diagnostic_home_text"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diagnosticsLV"
        android:layout_below="@id/diagnosticsIntroTV"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:background="@color/transparent"/>
    <TextView
        android:id="@+id/diagnosticsUpgradeTV"
        android:layout_width="250dp"
        android:layout_below="@id/diagnosticsIntroTV"
        android:text="@string/location_home_text"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:visibility="gone"
        android:textStyle="normal"
        android:layout_margin="20dp"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"/>
</RelativeLayout>

