<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/app_bg"
                tools:context="com.verizontelematics.indrivemobile.activity.ForgotUNResultActivity">

    <TextView
        android:id="@+id/name_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_sent"
        android:textSize="@dimen/header_text_size"
        android:layout_marginTop="@dimen/form_labels_text_height"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="@dimen/list_item_height"
        android:text="@string/go_back_login"
        android:id="@+id/goBackLoginBTN"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name_alert"
        android:layout_marginTop="@dimen/form_labels_text_height"/>
</RelativeLayout>
