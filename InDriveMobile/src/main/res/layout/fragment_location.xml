<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container_id_location"
                android:layout_width="match_parent"
                android:background="@drawable/location_background"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/locationIntroTV"
        android:layout_width="250dp"
        android:text="@string/location_home_text"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationLV"
        android:layout_below="@id/locationIntroTV"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/locationUpgradeTV"
        android:layout_width="250dp"
        android:layout_below="@id/locationIntroTV"
        android:text="@string/location_home_text"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:visibility="gone"
        android:textStyle="normal"
        android:layout_margin="20dp"
        android:gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"/>

</RelativeLayout>